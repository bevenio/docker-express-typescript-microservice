{
  "name": "docker-express-typescript-microservice",
  "version": "1.0.0",
  "description": "Small example of a microservice written in nodeJS utilising typescript and express",
  "main": "src/index.ts",
  "scripts": {
    "generate:openapi": "npx swagger-cli validate openapi/v1/api.yaml && npx openapi-typescript openapi/v1/api.yaml --output src/schemas/openapi.ts",
    "serve:dev": "concurrently \"npx tsc --watch\" \"nodemon -q build/index.js\"",
    "build:dev": "npm run generate:schemas && npx tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bevenio/docker-express-typescript-microservice.git"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "express",
    "microservice"
  ],
  "author": "Benjamin Brachmann",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bevenio/docker-express-typescript-microservice/issues"
  },
  "homepage": "https://github.com/bevenio/docker-express-typescript-microservice#readme",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-openapi-validator": "^5.0.2",
    "express-validator": "^6.15.0",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.1.13",
    "typedi": "^0.10.0"
  },
  "devDependencies": {
    "@apidevtools/swagger-cli": "^4.0.4",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.14.2",
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.20",
    "openapi-typescript": "^6.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
